<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
prefHeight="500" prefWidth="560"
fx:controller="controller.EmployeeController">
	
	<VBox>
	<padding>
		<Insets top="20" left="40"/>
	</padding>
	
	<HBox alignment="CENTER">
		<Label text="자  연  별  곡     직  원  관  리"/>
	</HBox>
	
	<Separator prefHeight="30" prefWidth="330"/>
	
	<HBox alignment="CENTER">
	<padding>
		<Insets top="20"/>
	</padding>
	
	<TableView fx:id="tableViewEmployee" prefHeight="300" prefWidth="490"/>
	
	</HBox>
	
	<HBox alignment="CENTER">
	<padding>
		<Insets top="10"/>
	</padding>
	<spacing>10</spacing>
	
	<Button fx:id="btnPromotion">승급</Button>
	<DatePicker fx:id="dpResignation" promptText="퇴사일을 선택해주세요."></DatePicker>
	<Button fx:id="btnResignation">퇴사</Button>
	<Button fx:id="btnExit">닫기</Button>
	
	</HBox>
	
	<HBox alignment="CENTER">
	<padding>
		<Insets top="20"/>
	</padding>
	<Label text="※직원등록은 로그아웃 후 로그인 창에서 할 수 있습니다."/>
	</HBox>

	</VBox>
	
</AnchorPane>

