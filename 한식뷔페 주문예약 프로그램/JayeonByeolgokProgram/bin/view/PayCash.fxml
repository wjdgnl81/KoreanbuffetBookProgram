<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
prefHeight="250.0" prefWidth="280.0">
	
	<VBox>
	<padding>
		<Insets top="35" left="48" right="30" bottom="20"/>
	</padding>
	<spacing>15</spacing>
	<children>
	
		<HBox>
		<spacing>5</spacing>
			<Label text="번호  :       "/>
			<TextField fx:id="txtNo" prefWidth="30"/>
		</HBox>
	
		<HBox>
		<spacing>5</spacing>
			<Label text="결제금액  : "/>
			<TextField fx:id="txtTotalPrice" prefWidth="80"/>
			<Label text="원"/>
		</HBox>
		
		<HBox>
			<spacing>5</spacing>
			<Label text="받은 금액 : "/>
			<TextField fx:id="txtMoney" prefWidth="80"/>
			<Label text="원"/>
		</HBox>
		
		<HBox>
			<spacing>5</spacing>
			<Label text="거스름 돈 : "/>
			<TextField fx:id="txtChange" prefWidth="80"/>
			<Label text="원"/>
		</HBox>
		
		<HBox>
			<spacing>5</spacing>
			<Label text="결제일 :     "/>
			<DatePicker fx:id="dpPayDay" prefWidth="130"/>
		</HBox>
		
		<HBox alignment="CENTER">
		<padding>
			<Insets top="10"/>
		</padding>
			<spacing>10</spacing>
			<Button fx:id="btnOk">계산</Button>
			<Button fx:id="btnCancle">취소</Button>
			<Button fx:id="btnComplete">결제완료</Button>
		</HBox>
		
	</children>
	</VBox>
	
	
</AnchorPane>

